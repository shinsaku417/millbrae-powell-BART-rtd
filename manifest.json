{
  "manifest_version": 2,

  "name": "Millbrae-Powell BART RTD",
  "description": "This extension lets you know real time departures of
  BART trains that go from Millbrae to Powell Street or vice versa.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },

  "permissions": [
  	"geolocation", 
    "http://*/",
    "http://*.google.com/",
    "http://localhost/*",
    "https://maps.googleapis.com/*",
    "https://maps.google.com/*"
  ], 

  "content_security_policy": "script-src 'self' https://maps.googleapis.com https://maps.gstatic.com; object-src 'self'"
}
